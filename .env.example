# Environment Configuration for Parenting App

# Backend API URL - Update this based on your deployment
EXPO_PUBLIC_API_URL=http://localhost:8000

# Development mode
EXPO_PUBLIC_ENV=development

# Enable/disable features during development
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# API Configuration
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_API_RETRY_ATTEMPTS=3

# Cache Configuration
EXPO_PUBLIC_CACHE_ENABLED=true
EXPO_PUBLIC_CACHE_TTL=300000

# Feature Flags
EXPO_PUBLIC_FEATURE_CHAT_ENABLED=true
EXPO_PUBLIC_FEATURE_MILESTONES_ENABLED=true
EXPO_PUBLIC_FEATURE_RESOURCES_ENABLED=true
EXPO_PUBLIC_FEATURE_ANALYTICS_ENABLED=true

# Development Debug Settings
EXPO_PUBLIC_DEBUG_API_CALLS=true
EXPO_PUBLIC_DEBUG_NAVIGATION=false
EXPO_PUBLIC_DEBUG_ANALYTICS=false
